@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
	int count = 0;
}
<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Hizmet Listesi</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Hizmet Adı</th>
								<th scope="col">Durum</th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.ServiceName</td>
									<td>@item.ServicesStatus</td>
									<td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
									<td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-warning">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
					<a href="/Service/CreateService/" class="btn btn-primary">Yeni Hizmet Ekle</a>
				</div>
			</div>
		</div>
	</div>
</div>

