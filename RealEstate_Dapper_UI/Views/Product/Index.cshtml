@model List<ResultProductDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">İlan Listesi</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">İlan Başlığı</th>
								<th scope="col">Şehir</th>
								<th scope="col">İlçe</th>
								<th scope="col">Kategori Adı</th>
								<th scope="col">Fiyat</th>
								<th scope="col">Türü</th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
								<th scope="col">İlanı Gör</th>
								<th scope="col">Fırsat mı ?</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<th scope="row">@item.productID</th>
									<td>@item.title</td>
									<td>@item.city</td>
									<td>@item.district</td>
									<td>@item.categoryName</td>
									<td>@item.price ₺</td>
									<td>@item.type</td>
									<td><a href="/Product/DeleteProduct/@item.productID" class="btn btn-danger">Sil</a></td>
									<td><a href="/Product/UpdateProduct/@item.productID" class="btn btn-warning">Güncelle</a></td>
									<td><a href="/Product/ProductDetail/@item.productID" class="btn btn-info">İlanı Gör</a></td>
									<td>
										@if (item.DealOfTheDay == true)
										{
											<a href="/Product/ProductDealOfTheDayStatusChangeToFalse/@item.productID" class="btn btn-dark">Pasif Yap </a>
										}
										@if (item.DealOfTheDay == false)
										{
											<a href="/Product/ProductDealOfTheDayStatusChangeToTrue/@item.productID" class="btn btn-success">Aktif Yap </a>
										}
									</td>
								</tr>
							}
						</tbody>
					</table>

					<a href="/Product/CreateProduct/" class="btn btn-primary">Yeni İlan Ekle</a>
				</div>
			</div>
		</div>
	</div>
</div>

